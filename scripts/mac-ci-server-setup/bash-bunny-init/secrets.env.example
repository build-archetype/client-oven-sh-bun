#!/bin/bash
# Bash Bunny secrets/env file for Mac CI setup
# Copy this to secrets.env and fill in your actual values

export AUTO_CONFIRM=true
export BUILDKITE_AGENT_TOKEN="your-buildkite-agent-token"
export GITHUB_USERNAME="your-github-username"
export GITHUB_TOKEN="your-github-token-with-packages-permission"
export MACHINE_LOCATION="office-1"
export COMPUTER_NAME="ci-mac-mini"
export BUILD_VLAN="10.0.1.0/24"
export MGMT_VLAN="10.0.2.0/24"
export STORAGE_VLAN="10.0.3.0/24"

# VPN Configuration
export VPN_ENABLED=false
export VPN_TYPE="tailscale"
export TAILSCALE_AUTH_KEY="your-tailscale-auth-key"

# Monitoring Configuration
export MONITORING_ENABLED=true
export MONITORING_TYPE="grafana-cloud"

# Grafana Cloud Configuration (get from https://grafana.com/orgs/your-org/stack/integrations)
export GCLOUD_HOSTED_METRICS_ID="your-organization-id"
export GCLOUD_RW_API_KEY="your-grafana-cloud-api-key"
export GCLOUD_HOSTED_METRICS_URL="https://prometheus-prod-XX-prod-us-east-0.grafana.net/api/prom/push"
export GCLOUD_HOSTED_LOGS_URL="https://logs-prod-XXX-prod-us-east-0.grafana.net/loki/api/v1/push"
export GCLOUD_REGION="prod-us-east-0"